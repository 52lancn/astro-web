---
interface Props {
	title: string;
    description: string;
    url: string;
    github: string;
}

const { title, description, url,github } = Astro.props;
---
<div class="flex flex-col items-start justify-items-start gap-2 bg-gray-800 bg-opacity-80 p-4 rounded-lg w-60">
    <p class="font-extrabold text-xl">{title}</p>
    <p class="text-offset text-xs leading-10">{description}</p>
    <div>
        {url!="" && <a href={url} target="_blank" class="bg-cyan-800 rounded-lg text-xs p-1">演示</a>}
        {github!="" && <a href={github} target="_blank" class="bg-cyan-800 rounded-lg text-xs p-1">源码</a>}
    </div>
</div>